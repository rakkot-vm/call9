{% block title %}Hello DeliverController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if deliverInDays is defined %}
        <h1>Your delivery will arrive in {{ deliverInDays }} days!</h1>
    {% endif %}


    <h3>Fill the form for calculating delivery time</h3>

    {{ form(form) }}
</div>
{% endblock %}
